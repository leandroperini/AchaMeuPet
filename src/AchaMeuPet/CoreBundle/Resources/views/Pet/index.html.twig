{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Pet list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Breed</th>
                <th>Age</th>
                <th>Color</th>
                <th>Weight</th>
                <th>Width</th>
                <th>Height</th>
                <th>Lostdate</th>
                <th>Picture</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('pet_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.breed }}</td>
                <td>{{ entity.age }}</td>
                <td>{{ entity.color }}</td>
                <td>{{ entity.weight }}</td>
                <td>{{ entity.width }}</td>
                <td>{{ entity.height }}</td>
                <td>{% if entity.lostDate %}{{ entity.lostDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.picture }}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('pet_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('pet_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('pet_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
